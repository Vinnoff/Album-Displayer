<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AlbumDisplayer" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryVariant">@color/primary_color_variant</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary_color</item>
        <item name="colorSecondaryVariant">@color/secondary_color_variant</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="windowNoTitle">true</item>
        <item name="textAllCaps">false</item>
        <item name="android:windowBackground">?attr/colorPrimaryVariant</item>
        <item name="cardViewStyle">@style/Theme.AlbumDisplayer.cardViewStyle</item>
    </style>

    <style name="Theme.AlbumDisplayer.ShapeImageView.Circle" parent="">
        <item name="cornerSize">50%</item>
        <item name="background">@android:color/transparent</item>
    </style>


    <style name="Theme.AlbumDisplayer.cardViewStyle">
        <item name="cardBackgroundColor">?attr/colorPrimary</item>
        <item name="cardCornerRadius">20dp</item>
    </style>

</resources>